<project>
	<parent>
		<artifactId>regal</artifactId>
		<groupId>de.nrw.hbz.regal</groupId>
		<version>0.5.0-SNAPSHOT</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<artifactId>regal-api</artifactId>
	<name>regal-api</name>
	<packaging>play2</packaging>
	<build>
		<plugins>
			<plugin>
				<groupId>org.nanoko.playframework</groupId>
				<artifactId>play2-maven-plugin</artifactId>
				<version>1.2.4</version>
				<extensions>true</extensions>
				<configuration>
					<play2Home>${user.home}/opt/play-${play2.version}</play2Home>
				</configuration>
				<executions>
					<execution>
						<id>play-installation</id>
						<goals>
							<goal>install-play</goal>
							<buildDist>false</buildDist>
						</goals>
						<phase>validate</phase>
						<configuration>
							<play2version>${play2.version}</play2version>
							<play2basedir>${user.home}/opt</play2basedir>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	
</project>